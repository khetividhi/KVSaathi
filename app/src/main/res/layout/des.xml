<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F4EC"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/illustrationImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:padding="10dp"
        android:src="@drawable/otpimage" />

    <TextView
        android:id="@+id/questionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/illustrationImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="आप क्या है?"
        android:textColor="#000000"
        android:textSize="18sp" />

    <RadioGroup
        android:id="@+id/optionsGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/questionText"
        android:layout_marginTop="1dp"
        android:layout_alignParentStart="true"
        android:paddingBottom="-100dp"
        android:layout_marginStart="20dp">

        <RadioButton
            android:id="@+id/option1"
            android:layout_width="wrap_content"

            android:layout_height="40dp"
            android:width="150dp"
            android:layout_margin="1dp"

            android:padding="1dp"
            android:text="जमीन मालिक" />

        <RadioButton
            android:id="@+id/option2"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:width="150dp"
            android:layout_margin="1dp"

            android:text="बड़ा किसान" />

        <RadioButton
            android:id="@+id/option3"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:width="150dp"
            android:layout_margin="1dp"
            android:text="छोटा किसान" />

        <RadioButton
            android:id="@+id/option4"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:width="150dp"
            android:layout_margin="1dp"

            android:text="अन्य" />
    </RadioGroup>

    <EditText
        android:id="@+id/otherInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/optionsGroup"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="-1dp"
        android:hint="कृपया सूची करें"
        android:padding="10dp" />

    <Button
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/otherInput"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:backgroundTint="#88B04B"
        android:text="आगे बढ़ें"
        android:textColor="#FFFFFF"
        android:paddingLeft="24dp"
        android:paddingRight="24dp" />

</RelativeLayout>
