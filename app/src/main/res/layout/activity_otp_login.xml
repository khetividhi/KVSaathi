<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#FFF7F0">

    <!-- Step Indicator Text -->

    <!-- Progress Indicator -->
    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="410dp"
        android:layout_height="8dp"
        android:layout_marginTop="-130dp"
        android:backgroundTint="@color/progress_background_color"
        android:progress="24"
        android:progressTint="@color/progress_color" />

    <TextView
        android:id="@+id/step_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Step 2 of 8"
        android:textColor="@color/text_color"
        android:textSize="16sp" />


    <ImageView
        android:id="@+id/img_otp_verification"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/otpimage"
        android:layout_marginBottom="20dp" />

    <TextView
        android:id="@+id/tv_otp_verification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ओटीपी सत्यापन"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/tv_enter_otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="भेजे गए ओटीपी को दर्ज करें"
        android:textSize="16sp"
        android:textColor="#8A8A8A"
        android:layout_marginBottom="20dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_otp_1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/otp_box"
            android:gravity="center"
            android:inputType="number"
            android:textSize="20sp"
            android:maxLength="1"
            android:layout_marginEnd="10dp"/>

        <EditText
            android:id="@+id/et_otp_2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/otp_box"
            android:gravity="center"
            android:inputType="number"
            android:textSize="20sp"
            android:maxLength="1"
            android:layout_marginEnd="10dp"/>

        <EditText
            android:id="@+id/et_otp_3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/otp_box"
            android:gravity="center"
            android:inputType="number"
            android:textSize="20sp"
            android:maxLength="1"
            android:layout_marginEnd="10dp"/>

        <EditText
            android:id="@+id/et_otp_4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/otp_box"
            android:gravity="center"
            android:inputType="number"
            android:textSize="20sp"
            android:maxLength="1"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_verify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="सत्यापित करें"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_background"
        android:layout_marginTop="30dp"/>
</LinearLayout>
